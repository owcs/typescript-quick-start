{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "outDir": "build",
    "rootDir": "./src",
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}